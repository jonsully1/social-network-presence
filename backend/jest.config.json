{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 90,
      "lines": 95,
      "statements": 95
    }
  },
  "coveragePathIgnorePatterns": ["src/server.ts"]
}
